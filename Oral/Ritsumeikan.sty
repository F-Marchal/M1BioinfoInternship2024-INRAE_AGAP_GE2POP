\xdefinecolor{alertred}{RGB}{122,43,43}         % Rouge pour alertblock
\xdefinecolor{lightgray}{RGB}{240,240,240}      % Gris très clair pour le fond des blocs

\setbeamercolor{footline}{bg=darkdolphinblue}
\setbeamercolor{frametitle}{bg=darkdolphinblue,fg=white}
\setbeamercolor{title}{bg=darkdolphinblue}
\setbeamerfont{frametitle}{size=\large}
%\setbeamertemplate{navigation symbols}{}
